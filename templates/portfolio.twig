{% extends "base_in.twig" %}

{% block title %}Portfolio | PixSalle{% endblock %}

{% block content %}
    <h1>Portfolio</h1>
    {% for photo in photos %}
        <div class = "col-sm-4 objetfit">
            {% if photo.img is not null %}
                <img src="{{photo.img}}" alt="{{photo.name}}'s image"/>
            {% else %}
                <img src="../public/assets/images/empty.jpg" alt="{{photo.name}}'s image"/>
            {% endif %}
        </div>
        By {{photo.author}}.
        <br>
    {% endfor %}
    {% if membership == "active" %}
        <form action="{{ formAction }}" method="POST">
            <p>Album Name: </p>
            <input type="text" id="name" name="name">
            <input type="submit" value="Create" />
        </form>
    {% endif %}
{% endblock %}